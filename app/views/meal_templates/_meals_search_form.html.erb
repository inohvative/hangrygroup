<%= search_form_for @q, :class => collapse_search_form, :id => "meals_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :nurse_notes_cont, "Nurse notes contains" %>
    <%= f.text_field :nurse_notes_cont, :class => "form-control", :placeholder => "Nurse notes contains" %>
  </div>

  <div class="form-group">
    <%= f.label :carbs_g, "Carbs g" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :carbs_g_gteq, :class => "form-control", :placeholder => "Carbs g greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :carbs_g_lteq, :class => "form-control", :placeholder => "Carbs g less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :mealtime_name_cont, "MealTime name contains" %>
    <%= f.text_field :mealtime_name_cont, :class => "form-control", :placeholder => "MealTime name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :glucoseleve_glucose_level_cont, "GlucoseLevel glucose_level contains" %>
    <%= f.text_field :glucoseleve_glucose_level_cont, :class => "form-control", :placeholder => "GlucoseLevel glucose_level contains" %>
  </div>

  <div class="form-group">
    <%= f.label :insulinunits_name_cont, "InsulinBolu name contains" %>
    <%= f.text_field :insulinunits_name_cont, :class => "form-control", :placeholder => "InsulinBolu name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/meals" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#meals_filters">
  Show filters
</a>

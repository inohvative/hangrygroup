<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All meals
    </h1>

    <a href="/meals/new" class="btn btn-block btn-outline-secondary">
      Add a new meal
    </a>
  </div>
</div>

<!-- Ransack Code start -->


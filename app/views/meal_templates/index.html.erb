<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Carbs g
        </th>

        <th>
          Mealtime
        </th>

        <th>
          Glucoselevel
        </th>

        <th>
          Insulinunits
        </th>

        <th>
          Nurse notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <!-- Display meal.id start -->
        <td>
          <%= meal.id %>
        </td>
        <!-- Display meal.id end -->

        <!-- Display meal.name start -->
        <td>
          <img src='<%= meal.name %>' class='img-fluid'>
        </td>
        <!-- Display meal.name end -->

        <!-- Display meal.carbs_g start -->
        <td>
          <%= meal.carbs_g %>
        </td>
        <!-- Display meal.carbs_g end -->

        <!-- Display meal.mealtime_id start -->
        <td>
          <%= meal.mealtime.name %>
        </td>
        <!-- Display meal.mealtime_id end -->

        <!-- Display meal.glucoselevel_id start -->
        <td>
          <%= meal.glucoseleve.glucose_level %>
        </td>
        <!-- Display meal.glucoselevel_id end -->

        <!-- Display meal.insulinunits_id start -->
        <td>
          <%= meal.insulinunits_id %>
        </td>
        <!-- Display meal.insulinunits_id end -->

        <!-- Display meal.nurse_notes start -->
        <td>
          <%= meal.nurse_notes %>
        </td>
        <!-- Display meal.nurse_notes end -->

        <!-- Display meal.created_at start -->
        <td>
          <%= time_ago_in_words(meal.created_at) %> ago
        </td>
        <!-- Display meal.created_at end -->

        <!-- Display meal.updated_at start -->
        <td>
          <%= time_ago_in_words(meal.updated_at) %> ago
        </td>
        <!-- Display meal.updated_at end -->

        <td>
          <a href="/meals/<%= meal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

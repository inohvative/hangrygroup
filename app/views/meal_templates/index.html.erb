<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All meals
    </h1>

    <a href="/meals/new" class="btn btn-block btn-outline-secondary">
      Add a new meal
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "meal_templates/meals_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Carbs g
        </th>

        <th>
          Mealtime
        </th>

        <th>
          Glucoselevel
        </th>

        <th>
          Insulinunits
        </th>

        <th>
          Nurse notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td>
          <%= meal.id %>
        </td>

        <td>
          <img src='<%= meal.name %>' class='img-fluid'>
        </td>

        <td>
          <%= meal.carbs_g %>
        </td>

        <td>
          <% if meal.mealtime.present? %>
            <a href="/meal_times/<%= meal.mealtime.id %>">
              <%= meal.mealtime.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if meal.glucoseleve.present? %>
            <a href="/glucose_levels/<%= meal.glucoseleve.id %>">
              <%= meal.glucoseleve.glucose_level %>
            </a>
          <% end %>
        </td>

        <td>
          <% if meal.insulinunits.present? %>
            <a href="/insulin_bolus/<%= meal.insulinunits.id %>">
              <%= meal.insulinunits.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= meal.nurse_notes %>
        </td>

        <td>
          <%= time_ago_in_words(meal.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(meal.updated_at) %> ago
        </td>

        <td>
          <a href="/meals/<%= meal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @meals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

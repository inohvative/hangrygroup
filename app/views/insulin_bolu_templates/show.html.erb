<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Insulin bolu #<%= @insulin_bolu.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/insulin_bolus" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link insulin_bolu start -->
      <div class="col">
        <a href="/insulin_bolus/<%= @insulin_bolu.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit insulin bolu
        </a>
      </div>
      <!-- Edit link insulin_bolu end -->

      <!-- Delete link insulin_bolu start -->
      <div class="col">
        <a href="/delete_insulin_bolu/<%= @insulin_bolu.id %>" class="btn btn-block btn-outline-secondary">
          Delete insulin bolu
        </a>
      </div>
      <!-- Delete link insulin_bolu end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @insulin_bolu.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Amount
      </dt>
      <!-- Display amount start -->
      <dd>
        <%= @insulin_bolu.amount %>
      </dd>
      <!-- Display amount end -->

      <dt>
        Subject
      </dt>
      <!-- Display subject_id start -->
      <dd>
        <%= @insulin_bolu.subject_id %>
      </dd>
      <!-- Display subject_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@insulin_bolu.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@insulin_bolu.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>


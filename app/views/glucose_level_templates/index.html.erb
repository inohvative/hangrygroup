<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All glucose levels
    </h1>

    <a href="/glucose_levels/new" class="btn btn-block btn-outline-secondary">
      Add a new glucose level
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "glucose_level_templates/glucose_levels_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Glucose level
        </th>

        <th>
          Subject
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @glucose_levels.each do |glucose_level| %>
      <tr>
        <td>
          <%= glucose_level.id %>
        </td>

        <td>
          <%= glucose_level.glucose_level %>
        </td>

        <td>
          <% if glucose_level.subject.present? %>
            <a href="/subjects/<%= glucose_level.subject.id %>">
              <%= glucose_level.subject.cohort_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(glucose_level.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(glucose_level.updated_at) %> ago
        </td>

        <td>
          <a href="/glucose_levels/<%= glucose_level.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @glucose_levels, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

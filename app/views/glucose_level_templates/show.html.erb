<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Glucose level #<%= @glucose_level.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/glucose_levels" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/glucose_levels/<%= @glucose_level.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit glucose level
        </a>
      </div>

      <div class="col">
        <a href="/delete_glucose_level/<%= @glucose_level.id %>" class="btn btn-block btn-outline-secondary">
          Delete glucose level
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Glucose level
      </dt>
      <dd>
        <%= @glucose_level.glucose_level %>
      </dd>

      <dt>
        Subject
      </dt>
      <dd>
        <% if @glucose_level.subject.present? %>
          <a href="/subjects/<%= @glucose_level.subject_id %>">
            <%= @glucose_level.subject.cohort_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@glucose_level.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@glucose_level.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "glucose_level_templates/glucose_level_meals" %>
  </div>
</div>

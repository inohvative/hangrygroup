<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Meal time #<%= @meal_time.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/meal_times" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link meal_time start -->
      <div class="col">
        <a href="/meal_times/<%= @meal_time.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit meal time
        </a>
      </div>
      <!-- Edit link meal_time end -->

      <!-- Delete link meal_time start -->
      <div class="col">
        <a href="/delete_meal_time/<%= @meal_time.id %>" class="btn btn-block btn-outline-secondary">
          Delete meal time
        </a>
      </div>
      <!-- Delete link meal_time end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @meal_time.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@meal_time.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@meal_time.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>


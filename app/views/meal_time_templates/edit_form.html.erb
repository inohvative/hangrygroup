<h1>
  Edit meal time #<%= @meal_time.id %>
</h1>

<hr>

<form action="/update_meal_time/<%= @meal_time.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @meal_time.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update meal time
  </button>
</form>

<hr>

<a href="/meal_times">
  Go back
</a>

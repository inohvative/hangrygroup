<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All meal times
    </h1>

    <a href="/meal_times/new" class="btn btn-block btn-outline-secondary">
      Add a new meal time
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @meal_times.each do |meal_time| %>
      <tr>
        <!-- Display meal_time.id start -->
        <td>
          <%= meal_time.id %>
        </td>
        <!-- Display meal_time.id end -->

        <!-- Display meal_time.name start -->
        <td>
          <%= meal_time.name %>
        </td>
        <!-- Display meal_time.name end -->

        <!-- Display meal_time.created_at start -->
        <td>
          <%= time_ago_in_words(meal_time.created_at) %> ago
        </td>
        <!-- Display meal_time.created_at end -->

        <!-- Display meal_time.updated_at start -->
        <td>
          <%= time_ago_in_words(meal_time.updated_at) %> ago
        </td>
        <!-- Display meal_time.updated_at end -->

        <td>
          <a href="/meal_times/<%= meal_time.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @meal_times, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

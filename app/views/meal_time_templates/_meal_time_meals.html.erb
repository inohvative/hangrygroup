<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Meals

    <a data-toggle="collapse" href="#meal_time_meals_new_form">
      Add meal
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @meal_time.meals.each do |meal| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/meals/<%= meal.id %>">
          <%= meal.name %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_meal_from_mealtime/<%= meal.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="meal_time_meals_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "meal_time_templates/meal_time_meals_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>

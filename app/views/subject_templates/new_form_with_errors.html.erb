<% if @subject.present? %>
  <% if @subject.errors.any? %>
    <% @subject.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new subject
</h1>


<hr>

<form action="/create_subject" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="cohort_id">
      Cohort
    </label>

    <%= select_tag(:cohort_id, options_from_collection_for_select(DosingCohort.all, :id, :cohort_123, @subject.cohort_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="profilenotes">
      Profilenotes
    </label>

    <input type="file" id="profilenotes" name="profilenotes" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create subject
  </button>
</form>

<hr>

<a href="/subjects">
  Go back
</a>

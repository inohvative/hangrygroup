<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subjects
    </h1>

    <a href="/subjects/new" class="btn btn-block btn-outline-secondary">
      Add a new subject
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "subject_templates/subjects_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cohort
        </th>

        <th>
          Profilenotes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subjects.each do |subject| %>
      <tr>
        <td>
          <%= subject.id %>
        </td>

        <td>
          <% if subject.cohort.present? %>
            <a href="/dosing_cohorts/<%= subject.cohort.id %>">
              <%= subject.cohort.cohort_123 %>
            </a>
          <% end %>
        </td>

        <td>
          <img src='<%= subject.profilenotes %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(subject.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(subject.updated_at) %> ago
        </td>

        <td>
          <a href="/subjects/<%= subject.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @subjects, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cohort
        </th>

        <th>
          Profilenotes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subjects.each do |subject| %>
      <tr>
        <!-- Display subject.id start -->
        <td>
          <%= subject.id %>
        </td>
        <!-- Display subject.id end -->

        <!-- Display subject.cohort_id start -->
        <td>
          <%= subject.cohort.cohort_123 %>
        </td>
        <!-- Display subject.cohort_id end -->

        <!-- Display subject.profilenotes start -->
        <td>
          <img src='<%= subject.profilenotes %>' class='img-fluid'>
        </td>
        <!-- Display subject.profilenotes end -->

        <!-- Display subject.created_at start -->
        <td>
          <%= time_ago_in_words(subject.created_at) %> ago
        </td>
        <!-- Display subject.created_at end -->

        <!-- Display subject.updated_at start -->
        <td>
          <%= time_ago_in_words(subject.updated_at) %> ago
        </td>
        <!-- Display subject.updated_at end -->

        <td>
          <a href="/subjects/<%= subject.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

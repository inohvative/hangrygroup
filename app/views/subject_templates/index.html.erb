<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subjects
    </h1>

    <a href="/subjects/new" class="btn btn-block btn-outline-secondary">
      Add a new subject
    </a>
  </div>
</div>

<!-- Ransack Code start -->

